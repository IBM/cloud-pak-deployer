apiVersion: knowledgestudio.watson.ibm.com/v1
kind: KnowledgeStudio
metadata:
  name: wks
  namespace: {{ _p_current_cp4d_cluster.project }}
  annotations:
    oppy.ibm.com/disable-rollback: 'true'
spec:
  license:
    accept: {{ cpd_accept_licenses | default(False) }}
  global:
    storageClassName: {{ ocp_storage_class_block }}
    size: {{ _current_cp4d_cartridge.size }}
  awt:
    persistentVolume: 
      storageClassName: {{ ocp_storage_class_file }}
{% if _current_cp4d_cartridge.version is defined %}
  version: {{ _current_cp4d_cartridge.version }}
{% endif %}