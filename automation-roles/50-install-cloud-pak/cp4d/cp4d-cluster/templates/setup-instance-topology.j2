set -o pipefail
setup-instance-topology \
    --cpd_operator_ns={{ current_cp4d_cluster.operators_project }} \
    --cpd_instance_ns={{ current_cp4d_cluster.project }} \
    --release={{ current_cp4d_cluster.cp4d_version }} \
    --case_download=true \
