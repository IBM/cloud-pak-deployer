  namespace: "{{ mail_project_name }}"
  labels:
    app: mail
subjects:
  - kind: ServiceAccount
    name: mail
    namespace: "{{ mail_project_name }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: 'system:openshift:scc:privileged'
