apiVersion: apps/v1
kind: Deployment
metadata:
  name: mail
  namespace: "{{ mail_project_name }}"
  labels:
    app: mail
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mail
  template:
    metadata:
      labels:
        app: mail
    spec:
      containers:
        - name: docker-mailserver
          image: "{{ mail_image }}"
          resources:
            requests:
              cpu: 50m
              memory: 128Mi
            limits:
              cpu: 500m
              memory: 1536Mi
          startupProbe:
            tcpSocket:
              port: 25
            timeoutSeconds: 2
            periodSeconds: 45
            successThreshold: 1
            failureThreshold: 5
          readinessProbe:
            tcpSocket:
              port: 25
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 5
          livenessProbe:
            tcpSocket:
              port: 25
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 10
          securityContext:
            capabilities:
              # If Fail2Ban is not enabled, you can remove NET_ADMIN.
              # If you are running on CRI-O, you will need the SYS_CHROOT capability,
              # as it is no longer a default capability.
              add: ["SYS_PTRACE", "SYS_CHROOT" ]
          volumeMounts:
            - name: config
              subPath: postfix-accounts.cf
              mountPath: /tmp/docker-mailserver/postfix-accounts.cf
              readOnly: true
            - name: config
              subPath: postfix-virtual.cf
              mountPath: /tmp/docker-mailserver/postfix-virtual.cf
              readOnly: true
            - name: config
              subPath: postfix-main.cf
              mountPath: /tmp/docker-mailserver/postfix-main.cf
              readOnly: true
            - name: data
              mountPath: /var/mail
              subPath: data
            - name: data
              mountPath: /var/mail-state
              subPath: state
            - name: public-dir-pipe-folder
              mountPath: /var/mail-state/spool-postfix/public
              subPath: public
            - name: private-dir-pipe-folder
              mountPath: /var/mail-state/spool-postfix/private
              subPath: public
            - name: data
              mountPath: /var/log/mail
              subPath: log
            - name: tls
              readOnly: true
              mountPath: /tmp/ssl
          ports:
            - name: smtp
              containerPort: 25
              protocol: TCP
            - name: smtp-secure
              containerPort: 465
              protocol: TCP
            - name: smtp-auth
              containerPort: 587
            - name: imap
              containerPort: 143
              protocol: TCP
            - name: imap-secure
              containerPort: 993
              protocol: TCP
          envFrom:
            - configMapRef:
                name: mail-env-config
      serviceAccountName: mail
      volumes:
        - name: config
          configMap:
            name: mail-config
        - name: data
          persistentVolumeClaim:
            claimName: mail-storage
        # Cannot create named pipes on connected storage class, must be in. Risk of loosing data.
        - name: public-dir-pipe-folder
          emptyDir: {}
        # Cannot create named pipes on connected storage class, must be in. Risk of loosing data.
        - name: private-dir-pipe-folder
          emptyDir: {}
        - name: tls
          secret:
            secretName: mail-tls
            defaultMode: 256
