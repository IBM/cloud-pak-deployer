apiVersion: processmining.ibm.com/v1beta1
kind: ProcessMining
metadata:
  name: processmining
  namespace: "{{ pm_project_name }}"
spec:
  version: "{{ pm_version }}"
  license:
    accept: true
    cloudPak: "IBM Cloud Pak for Business Automation"
  defaultStorageClassName: "{{ pm_storage_class_name }}"
  processmining:
    tls:
      ui:
        secretname: pm-tls-secret
        certificate: tls.crt
        key: tls.key
        ca: ca.crt
    storage:
      redis:
        install: false
      database:
        external:
          connectionstring: ""
          host: "{{ pm_postgresql_hostname }}"
          port: 5432
          database: pm
          user: pm
          credential: 
            secretname: pm-dbs
            passwordkey: pmDbPassword
  taskmining:
    agent_plugin: true
    tls:
      ui:
        secretname: pm-tls-secret
        certificate: tls.crt
        key: tls.key
        ca: ca.crt
    storage:
      database:
        dbtype: postgres
        external:
          credential:
            secretname: pm-dbs
            passwordkey: tmDbPassword
          user: tm
          database: tm
          host: "{{ pm_postgresql_hostname }}"
          port: 5432
          schema: public
          ssl: false
