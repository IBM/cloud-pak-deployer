apiVersion: apps/v1
kind: Deployment
metadata:
  name: cerebro
  namespace: "{{ cerebro_project_name }}"
  labels:
    app: cerebro
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cerebro
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: cerebro
    spec:
      containers:
        - name: cerebro
          image: "{{ cerebro_image }}"
          imagePullPolicy: IfNotPresent
          args: 
            - "-Dplay.ws.ssl.loose.acceptAnyCertificate=true"
          readinessProbe:
            tcpSocket:
              port: 8080
            initialDelaySeconds: 45
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 5
          livenessProbe:
            tcpSocket:
              port: 8080
            initialDelaySeconds: 45
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 10
          ports:
            - name: cerebro
              containerPort: 8080
              protocol: TCP
          env:
            - name: CEREBRO_PORT
              value: "8080"
          volumeMounts:
            - name: config
              mountPath: /opt/cerebro/conf/application.conf
              subPath: application.conf                    
      restartPolicy: Always
      volumes:
        - name: config
          configMap:
            name: cerebro         
