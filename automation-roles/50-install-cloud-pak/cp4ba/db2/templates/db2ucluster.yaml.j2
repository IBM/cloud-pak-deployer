apiVersion: db2u.databases.ibm.com/v1
kind: Db2uCluster
metadata:
  name: db2ucluster
  namespace: db2
spec:
  license:
    accept: true
    value: 
  account:
    privileged: true
    imagePullSecrets:
      - ibm-entitlement-key
  version: "{{ db2_version }}"
  size: 1
  podConfig:
    db2u:
      resource:
        db2u:
          requests:
            cpu: 500m
            memory: 14336Mi
          limits:
            cpu: 2000m
            memory: 14336Mi
  environment:
    dbType: db2oltp
    instance:
      password: '{{ universal_password }}'
    ldap:
      blueAdminPassword: '{{ universal_password }}'
      password: '{{ universal_password }}'
    database:
      name: PM
  storage:
    - name: share
      type: create
      spec:
        accessModes:
          - ReadWriteMany
        resources:
          requests:
            storage: 110Gi
        storageClassName: "{{ storage_class_name }}"
