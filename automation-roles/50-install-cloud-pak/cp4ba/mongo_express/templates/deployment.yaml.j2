apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo-express
  namespace: mongo-express
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mongo-express
  template:
    metadata:
      labels:
        app: mongo-express
    spec:
      containers:
        - name: mongo-express
          image: "mongo-express:{{ mongo_express_image_tag }}"
          imagePullPolicy: IfNotPresent
          readinessProbe:
            tcpSocket:
              port: 8081
            initialDelaySeconds: 10
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 5
          livenessProbe:
            tcpSocket:
              port: 8081
            initialDelaySeconds: 10
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 10                       
          ports:
            - name: ui
              containerPort: 8081
              protocol: TCP
          env:
            - name: ME_CONFIG_MONGODB_ENABLE_ADMIN
              value: "true"
            - name: ME_CONFIG_MONGODB_ADMINUSERNAME
              value: "root"
            - name: ME_CONFIG_MONGODB_ADMINPASSWORD
              value: "{{ mongo_express_universal_password }}"
            - name: ME_CONFIG_MONGODB_SERVER
              value: "{{ mongo_express_mongodb_hostname }}"
            - name: ME_CONFIG_BASICAUTH_USERNAME
              value: "{{ mongo_express_admin_user }}"
            - name: ME_CONFIG_BASICAUTH_PASSWORD
              value: "{{ mongo_express_universal_password }}"
