kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: 'roundcube-anyuid'
  namespace: "{{ roundcube_project_name }}"
  labels:
    app: roundcube
subjects:
  - kind: ServiceAccount
    name: default
    namespace: "{{ roundcube_project_name }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: 'system:openshift:scc:anyuid'
