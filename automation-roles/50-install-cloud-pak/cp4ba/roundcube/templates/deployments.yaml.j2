apiVersion: apps/v1
kind: Deployment
metadata:
  name: roundcube-db
  namespace: "{{ roundcube_project_name }}"
  labels:
    app: roundcube
spec:
  replicas: 1
  selector:
    matchLabels:
      service: roundcube-db
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: roundcube
        service: roundcube-db
    spec:
      containers:
        - name: roundcubedb
          image: "postgres:{{ roundcube_db_image}}"
          imagePullPolicy: ""
          resources:
            requests:
              cpu: 50m
              memory: 128Mi
            limits:
              cpu: 500m
              memory: 1536Mi
          env:
            - name: POSTGRES_DB
              value: roundcube
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  name: roundcube-shared-secret
                  key: DB_USER
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: roundcube-shared-secret
                  key: DB_PASSWORD
          ports:
            - containerPort: 5432
          volumeMounts:
            - mountPath: /var/lib/postgresql/data
              name: roundcubedb-volume
      restartPolicy: Always
      serviceAccountName: ""
      volumes:
        - name: roundcubedb-volume
          persistentVolumeClaim:
            claimName: roundcube-db
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: roundcube
  namespace: "{{ roundcube_project_name }}"
  labels:
    app: roundcube  
    service: roundcube
spec:
  replicas: 1
  selector:
    matchLabels:
      service: roundcube
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: roundcube
        service: roundcube
    spec:
      containers:
        - name: roundcubemail
          image: "{{ roundcube_image }}"
          imagePullPolicy: ""
          resources:
            requests:
              cpu: 50m
              memory: 128Mi
            limits:
              cpu: 500m
              memory: 1536Mi        
          env:
            - name: ROUNDCUBEMAIL_DB_TYPE
              value: pgsql
            - name: ROUNDCUBEMAIL_DB_HOST
              value: roundcubedb
            - name: ROUNDCUBEMAIL_DB_NAME
              value: roundcube
            - name: ROUNDCUBEMAIL_DB_USER
              valueFrom:
                secretKeyRef:
                  name: roundcube-shared-secret
                  key: DB_USER
            - name: ROUNDCUBEMAIL_DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: roundcube-shared-secret
                  key: DB_PASSWORD
            - name: ROUNDCUBEMAIL_DES_KEY
              valueFrom:
                secretKeyRef:
                  name: roundcube-shared-secret
                  key: DES_KEY
            - name: ROUNDCUBEMAIL_DEFAULT_HOST
              value: "tls://{{ roundcube_mail_hostname }}"
            - name: ROUNDCUBEMAIL_SMTP_SERVER
              value: "tls://{{ roundcube_mail_hostname }}"
            - name: ROUNDCUBEMAIL_SKIN
              value: elastic
            - name: ROUNDCUBEMAIL_PLUGINS
              value: archive,zipdownload,newmail_notifier
          ports:
            - containerPort: 9000
          volumeMounts:
            - mountPath: /var/www/html
              name: www-data
            - mountPath: /tmp/roundcube-temp
              name: temp-data
            - name: mail-config
              mountPath: /var/roundcube/config/custom.php
              subPath: custom.php
      restartPolicy: Always
      # serviceAccountName: ""
      volumes:
        - name: www-data
          persistentVolumeClaim:
            claimName: roundcube-www-pvc
        - name: temp-data
          persistentVolumeClaim:
            claimName: roundcube-temp-pvc
        - name: mail-config
          configMap:
            name: roundcube-config
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: roundcube-nginx
  namespace: "{{ roundcube_project_name }}"
  labels:
    app: roundcube  
spec:
  replicas: 1
  selector:
    matchLabels:
      service: roundcube-nginx
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: roundcube      
        service: roundcube-nginx
    spec:
      containers:
        - name: roundcubenginx
          image: "{{ roundcube_nginx_image }}"
          imagePullPolicy: IfNotPresent
          resources:
            requests:
              cpu: 50m
              memory: 128Mi
            limits:
              cpu: 500m
              memory: 1536Mi
          env:
            - name: NGINX_HOST
              value: localhost
            - name: NGINX_PHP_CGI
              value: roundcubemail:9000
          ports:
            - containerPort: 80
          startupProbe:
            tcpSocket:
              port: 80
            timeoutSeconds: 1
            periodSeconds: 45
            successThreshold: 1
            failureThreshold: 5
          readinessProbe:
            tcpSocket:
              port: 80
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 5
          livenessProbe:
            tcpSocket:
              port: 80
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 10            
          volumeMounts:
            - name: www-data
              mountPath: /var/www/html
            - name: nginx-config
              mountPath: /etc/nginx/conf.d/default.conf
              subPath: default.conf
      restartPolicy: Always
      serviceAccountName: ""
      volumes:
        - name: www-data
          persistentVolumeClaim:
            claimName: roundcube-www-pvc
        - name: nginx-config
          configMap:
            name: roundcube-nginx-config
