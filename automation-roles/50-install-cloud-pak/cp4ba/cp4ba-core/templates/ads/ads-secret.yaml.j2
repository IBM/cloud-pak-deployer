  name: ads-genai-secret
  namespace: "{{ cp4ba_project_name }}"
type: Opaque
stringData:
  genAI: |- 
    { 
      "name": "GENAI",
      "type": "WML",
      "description": null,
      "updateTime": 0,
      "authInfo": {
        "authType": "IAM",
