spec:
  bastudio_configuration:
    admin_user: "{{ lc_principal_admin_user }}"
    database:
      host: "{{ cp4ba_postgresql_hostname }}"
      type: postgresql
      name: basdb
      port: "5432"
    jms_server:
      storage:
        persistent: true
        use_dynamic_provisioning: true
        storage_class: "{{ cp4ba_storage_class_name }}"
    playback_server:
      admin_user: "{{ lc_principal_admin_user }}"
      database:
        host: "{{ cp4ba_postgresql_hostname }}"
        name: appdb
        port: "5432"
        type: postgresql
