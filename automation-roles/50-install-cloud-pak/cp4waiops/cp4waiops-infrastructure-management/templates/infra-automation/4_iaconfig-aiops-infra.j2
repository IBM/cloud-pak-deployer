kind: IAConfig
apiVersion: aiops.ibm.com/v1alpha1
metadata:
  name: ibm-ia-installer
  namespace: {{ current_cp4waiops_cluster.project }}
spec:
  imagePullSecret: ibm-entitlement-key
  infraAutoComposableComponents:
    - enabled: true
      name: ibm-management-im-install
      spec: {}
    - enabled: true
      name: ibm-management-cam-install
      spec: {}
  license:
    accept: true
  storageClass: {{ WAIOPS_STORAGE_CLASS_FILE }}
  storageClassLargeBlock: {{ WAIOPS_STORAGE_CLASS_LARGE_BLOCK }}