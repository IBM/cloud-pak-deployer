              "$template": "{{ alert.summary }}"
            },
            "holdoffSec": 0,
            "notification": [{
              "type": "slack",
              "name": "AIOPSSystemDefault",
              "details": {}
            }, {
              "type": "msteams",
              "name": "AIOPSSystemDefault",
              "details": {}
            }],
            "assignment": {
              "owner": null,
              "team": null
            },
            "addRelatedAlerts": {
              "update": false
