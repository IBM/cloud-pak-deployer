---
apiVersion: service.isf.ibm.com/v1
kind: FusionServiceInstance
metadata:
  name: ibm-backup-restore-service-instance
  namespace: ibm-spectrum-fusion-ns
spec:
  creator: User
  doInstall: true
  parameters:
  - name: namespace
    provided: false
    value: ibm-backup-restore
  - name: doInstall
    provided: false
    value: "true"
  - name: storageClass
    provided: true
    value: {{ ocp_storage_class_file }}
  - name: autoUpgrade
    provided: false
    value: "true"
  serviceDefinition: ibm-backup-restore-service
  triggerUpdate: false
  updateServiceCRSpec: false